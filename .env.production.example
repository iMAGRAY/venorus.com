# Venorus.net Production Environment Configuration Example
# Copy this file to .env.production and fill with your actual values

# Database - PostgreSQL with SSL
DATABASE_URL="postgresql://your_user:your_password@your_host:5432/your_db?sslmode=allow"
NEXT_PUBLIC_SITE_URL="https://your-domain.com"
POSTGRESQL_HOST="your_db_host"
POSTGRESQL_PORT="5432"
POSTGRESQL_USER="your_db_user"
POSTGRESQL_PASSWORD="your_secure_password"
POSTGRESQL_DBNAME="your_database_name"

# Redis Cache
REDIS_HOST="your_redis_host"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your_redis_password"
REDIS_DATABASE="0"

# S3 Storage
S3_ENDPOINT="https://your-s3-endpoint.com"
S3_REGION="your-region"
S3_ACCESS_KEY="your_s3_access_key"
S3_SECRET_KEY="your_s3_secret_key"
S3_BUCKET="your-bucket-name"

# Admin Auth - Generate secure credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your_secure_admin_password"

# JWT & Security - Generate random secrets min 32 chars
JWT_SECRET="your_jwt_secret_min_32_chars_random_string"
SESSION_SECRET="your_session_secret_min_32_chars_random_string"
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="3600000"

# Production specific
NODE_ENV="production"
PORT="3000"

# SSL Configuration for PostgreSQL
PGSSLMODE="allow"
DATABASE_SSL="true"
PGSSLCERT=""
PGSSLKEY=""
PGSSLROOTCERT=""
QUICK_HEALTH_CHECK=true

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET="your_github_webhook_secret"

# API Tokens
RESTART_TOKEN="your_restart_token"
CLEAN_DEPLOY_TOKEN="your_clean_deploy_token"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN=""
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@your-domain.com"

# Performance
ENABLE_COMPRESSION="true"
ENABLE_CDN="false"
CACHE_MAX_AGE="3600"